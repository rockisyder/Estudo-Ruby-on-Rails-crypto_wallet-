<p id="notice"><%= notice %></p>
<h1><%= t('showing.coin')%></h1>
<form >

  <div class="mb-3">
    <strong><%= t('description')%> </strong> 
    <%= text_field_tag nil, @coin.description, class:"form-control", disabled: true %>
  </div>

  <div class="mb-3">
    <strong><%= t('acronym')%></strong>
    <%= text_field_tag nil, @coin.acronym, class:"form-control",disabled: true %>
  </div>

  <div class="mb-3">
    <strong><%= t('image')%></strong>
    <%= image_tag @coin.url_image, size: "23x23" %>
    <%= text_field_tag nil, @coin.url_image, class:"form-control",disabled: true %>
  </div>
  
  <div class="mb-3">
    <strong><%= t('mining_type')%></strong> 
    <%= text_field_tag nil, @coin.mining_type.name, class:"form-control", disabled: true %>
  </div>
 
   


</form>

</br>

<%= link_to t('link.edit'), edit_coin_path(@coin), class:"btn btn-primary btn-sm", type:"button" %> 
<%= link_to t('link.back'), coins_path, class:"btn btn-primary btn-sm", type:"button" %>
