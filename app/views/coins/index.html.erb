<ul>
  
  <%= link_to t('link.home'), welcome_index_path, class:"btn btn-primary btn-sm", type:"button"  %>
 
  <%= link_to t('mining_type'), mining_types_path, class:"btn btn-primary btn-sm", type:"button" %>
  
</ul>

<p id="notice"><%= notice %></p>

<h1><%=t('coin')%></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%=t('description')%></th>
      <th><%=t('acronym')%></th>
      <th><%=t('image')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "25x25" %></td>
        <td><%= link_to t('link.show'), coin %></td>
        <td><%= link_to t('link.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('link.delete'), coin, method: :delete, data: { confirm: t('messagens.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<ul>
  <%= link_to t('new.coin'), new_coin_path, class:"btn btn-primary btn-sm", type:"button" %>
</ul>