<ul>
  
  <%= link_to t('link.home'), welcome_index_path, class:"btn btn-primary btn-sm", type:"button"  %>
 
  <%= link_to t('coin'), coins_path, class:"btn btn-primary btn-sm", type:"button" %>
  
</ul>


<p id="notice"><%= notice %></p>

<h1><%=t('mining_type')%></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%=t('description')%></th>
      <th><%=t('acronym')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.name %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('link.show'), mining_type %></td>
        <td><%= link_to t('link.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('link.delete'), mining_type, method: :delete, data: { confirm: t('messagens.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul>
    <%= link_to t('new.mining_type'), new_mining_type_path, class:"btn btn-primary btn-sm", type:"button" %>
</ul>